{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "removeComments": true, // 移除注释
    "emitDecoratorMetadata": true, // 启用装饰器
    "experimentalDecorators": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "declaration": true,// 是否生成声明文件
    "declarationDir": "dist/type",// 声明文件打包的位置
    "lib": [
      "esnext",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
